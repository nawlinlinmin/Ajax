<h3>
  <%= "#{@user.name}の投稿一覧" %>
</h3>

<div class="blogs">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td>
              <%= link_to blog.user.name, user_path(blog.user_id) %>
            <td><%= blog.title %></td>
            <td><%= blog.content %></td>
            <td><%= link_to 'Show', blog %></td>
            <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
            <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
